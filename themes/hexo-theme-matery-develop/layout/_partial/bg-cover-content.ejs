<div class="row">
    <div class="col s10 offset-s1 m10 offset-m1 l10 offset-l1">
        <div class="brand">
            <div class="title center-align" style="font-family: Poppins-bold,sans-serif;font-size: 60px;"><b>
                Nation-wide Community-based Mobile Edge Sensing and Computing Testbeds
                </b>
            </div>

            <div class="description center-align" style="font-size: 40px;font-weight: 700;">
                <% if (theme.subtitle.enable) { %>
                <span id="subtitle"></span>
                <script src="<%- theme.jsDelivr.url %><%- url_for(theme.libs.js.typed) %>"></script>
                <script>
                    var typed = new Typed("#subtitle", {
                        strings: [ 
                            "Welcome to our website"
                        ],
                        startDelay: <%= theme.subtitle.startDelay %>,
                        typeSpeed: <%= theme.subtitle.typeSpeed %>,
                        loop: <%= theme.subtitle.loop %>,
                        backSpeed: <%= theme.subtitle.backSpeed %>,
                        showCursor: <%= theme.subtitle.showCursor %>
                    });
                </script>
                <% } else { %>
                    <%= config.description %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% if (theme.banner.enable) { %>
<script>
    // 每天切换 banner 图.  Switch banner image every day.
    var bannerUrl = "<%- theme.jsDelivr.url %><%- url_for('/medias/banner/') %>" + new Date().getDay() + '.jpg';
    $('.bg-cover').css('background-image', 'url(' + bannerUrl + ')');
</script>
<% } else { %>
<script>
    $('.bg-cover').css('background-image', 'url(<%- theme.jsDelivr.url %><%- url_for('/medias/banner/0.jpg') %>)');
</script>
<% } %>
